@page
@model _112NewsVideoMarked.Pages.Cases.CreateModel

@{
    ViewData["Title"] = "Opret sag";
}

<h1>Opret sag</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="CaseContent.Title" class="control-label"></label>
                <input asp-for="CaseContent.Title" class="form-control" />
                <span asp-validation-for="CaseContent.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaseContent.Description" class="control-label"></label>
                <input asp-for="CaseContent.Description" class="form-control" />
                <span asp-validation-for="CaseContent.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaseContent.Street" class="control-label"></label>
                <input asp-for="CaseContent.Street" class="form-control" />
                <span asp-validation-for="CaseContent.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaseContent.Town" class="control-label"></label>
                <input asp-for="CaseContent.Town" class="form-control" />
                <span asp-validation-for="CaseContent.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaseContent.PostalCode" class="control-label"></label>
                <input asp-for="CaseContent.PostalCode" class="form-control" />
                <span asp-validation-for="CaseContent.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Næste" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Fortryd</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
